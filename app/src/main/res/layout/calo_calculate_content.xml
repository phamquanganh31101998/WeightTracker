<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.weighttracker.CaloCalculateActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn món ăn"
        android:textColor="#020e51"
        android:textSize="25sp"
        android:layout_marginBottom="13dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="180dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etquantity"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="20sp"
            android:inputType="number"
            android:hint="Số lượng"
            android:textColor="#ff0000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/calthis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:layout_above="@+id/suggestion"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#1732e7"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/Food_cal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:textSize="55sp"
            android:textColor="#e11414"
            android:text="Kết quả"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm"
            android:layout_below="@+id/suggestion"
            android:layout_alignRight="@+id/etquantity"
            android:layout_alignEnd="@+id/etquantity"
            android:layout_marginRight="31dp"
            android:layout_marginEnd="31dp"
            android:background="#1732e7"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng năng lượng"
            android:layout_marginBottom="24dp"
            android:layout_above="@+id/calories"
            android:layout_toRightOf="@+id/calthis"
            android:layout_toEndOf="@+id/calthis"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:background="#1732e7"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/total_calo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>




</LinearLayout>