<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_weight_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Hãy nhập số cân nặng của bạn"
        android:textSize="20dp"/>

    <AutoCompleteTextView
        android:id="@+id/auto_textview_weight"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:digits="0123456789.,"
        android:ems="10"
        android:hint="Số cân nặng"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_weight_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="#D80F51"
            android:text="Đồng ý"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_weight_huy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="80dp"
            android:background="#673AB7"
            android:text="Hủy"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:id="@+id/txt_weight_dialog_ngay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:textSize="15dp"/>
</LinearLayout>